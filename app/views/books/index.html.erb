<p id="notice"><%= notice %></p>

<h1>Books</h1>
  <table cellspacing="2">
    <tr>
      <th><h3>Title</h3></th>
      <th><h3>Body</h3></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
    <% end %></tr>
  </table>
<h1>New book</h1>
<% if @book.errors.any? %>
  <div class = "alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@book, url: 'books') do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>